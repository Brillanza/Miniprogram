<!--日期-->
<view style="width: 100%;height:100px;color:#000;font-size:44rpx;font-weight:bold;line-height:100px;text-align:center;">
  {{dateOfToday}}
</view>
<!--分隔线-->
<view style="width:100%;height:1rpx;background-color:gray;"></view>
<!--滚动视图-->
<scroll-view style="width: 100%;height:{{scrollViewHeight}}px;" scroll-y>
  <view wx:for="{{items}}" wx:key="i" wx:for-item="item" wx:for-index="idx">
    <view class="kuai">
      <view class="tupian"style="padding-left:20rpx;text-overflow: ellipsis;">
    {{items[idx].year}}年  {{items[idx].title}}
    <image src="{{items[idx].img}}" hidden="{{!hid[idx]}}"></image>
    </view>
    </view>
  </view>
</scroll-view>




















