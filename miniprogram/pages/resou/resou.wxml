<view class="continue"> 
  <view class="button_3"> 
    <view>
      <button size="mini" bindtap="bindjian" bindtap="bindkeji">
      科技
      </button>
    </view>
    <view>
      <button size="mini" bindtap="bindfan"bindtap="binddianyin">
      电影
      </button>
    </view>
    <view>
      <button size="mini" bindtap="bindhuo"bindtap="bindrewu">
      人物
      </button>
    </view>
  </view>
  <view class="button_3"> 
    <view>
      <button size="mini" bindtap="bindjian"bindtap="bindyouxi">
      游戏
      </button>
    </view>
    <view>
      <button size="mini" bindtap="bindfan"bindtap="binddianshiju">
      电视剧
      </button>
    </view>
    <view>
      <button size="mini" bindtap="bindhuo"bindtap="bindkexiaoshuo">
      小说
      </button>
    </view>
  </view>
</view>
<view class="table">
  <view class="tr bg-w">
    <view class="th" style="border-top-left-radius: 28rpx;">排名</view>
    <view class="th" style="border-top-right-radius: 28rpx;">名称</view>
  </view>
  <block wx:for="{{items}}" wx:key="i">
    <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
      <view class="td">{{item.num}}</view>
      <view class="td">{{item.name}}</view>
    </view>
    <view class="tr" wx:else>
      <view class="td">{{item.num}}</view>
      <view class="td">{{item.name}}</view>
    </view>
  </block>
</view>